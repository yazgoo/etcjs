description:
    Etcjs is a simple HTTP based configuration manager.
    It allows to create users and manage configurations
    for each one of them.
core components:
    server:
        description:
            Etcjs server
        prerequisites:
            - node.js
        source path:
            src/server
    client:
        c:
            etcjs:
                description:
                    A client library for etcjs
                prerequisites:
                    - libcurl
                source path:
                    src/client/etcjs.{c,h}
            etcjs_cli:
                description:
                    A command line client for etcjs
                prerequisites:
                    - client/c/etcjs
                source path:
                    src/client/etcjs_cli.c
            etcjs_fuse:
                description:
                    A fuse driver for etcjs
                prerequisites:
                    - client/c/etcjs
                    - fuse
                source path:
                    src/client/etcjs_fuse.c
        php:
            etjs:
                description:
                    A client library for etcjs
                prerequisites:
                    - curl extension
                source path:
                    src/client/etcjs.php
            etcjs_laravel:
                description:
                    A laravel client for etcjs
                prerequisites:
                    - laravel
                    - client/php/etcjs
                source path:
                    src/client/etcjs_laravel
        javascript:
